# Hafif sürüm kullan
FROM python:3.10-slim

WORKDIR /app

# Sistem araçlarını sadece kurulum anında kullan ve temizle
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Sadece bağımlılıkları kopyala ve yükle
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Sadece ai_service içindeki gerekli dosyaları kopyala
WORKDIR /app
RUN mkdir -p ai_service
COPY . ./ai_service

# PYTHONPATH ayarla ki hem 'ai_service.main' hem de icindeki importlar calissin
ENV PYTHONPATH=/app/ai_service
ENV PORT=8080
EXPOSE 8080

# Uygulamayı başlat
CMD ["sh", "-c", "gunicorn --bind 0.0.0.0:$PORT -k uvicorn.workers.UvicornWorker ai_service.main:app"]