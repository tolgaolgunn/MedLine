# Hafif sürüm kullan
FROM python:3.10-slim

WORKDIR /app

# Sistem araçlarını sadece kurulum anında kullan ve temizle
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Sadece bağımlılıkları kopyala ve yükle
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Sadece ai_service içindeki gerekli dosyaları kopyala
COPY . .

ENV PORT=8080
EXPOSE 8080

# Uygulamayı başlat (app.py kullandığını varsayıyorum)
CMD ["sh", "-c", "gunicorn --bind 0.0.0.0:$PORT app:app"]